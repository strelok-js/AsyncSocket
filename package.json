    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "browser": "dist/index.browser.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "author": "Strelok.js, TillSilph",
